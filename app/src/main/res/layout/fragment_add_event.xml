<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clipToOutline="true"
    android:supportsRtl="true"
    tools:ignore="RtlEnabled"
    tools:context = ".MainActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:elevation="80dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,RtlSymmetry">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints,RtlSymmetry">


                <LinearLayout
                    android:id="@+id/add_event_LRT_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/stroke_color_for_profile"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_back_button" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_event_title"
                        android:textAppearance="?android:textAppearanceMedium"

                        android:textSize="35sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/add_event_LRT_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="100dp"
                        android:layout_weight="1"
                        android:elevation="40dp"

                        app:cardCornerRadius="10dp"

                        app:strokeWidth="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/add_event_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="40dp"


                            android:backgroundTint="@color/red"
                            app:borderWidth="0dp"
                            app:elevation="8dp"
                            app:fabCustomSize="40dp"
                            app:srcCompat="@drawable/ic_location_home_screen"
                            app:tint="@color/white"

                            app:useCompatPadding="false" />

                        <!--                        &lt;!&ndash; Rectangle 1 &ndash;&gt;-->
                        <!--                        <EditText-->
                        <!--                            android:id="@+id/add_event_EDT_location"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:background="@color/white"-->
                        <!--                            android:textStyle="normal"-->

                        <!--                            android:textColorHint="@color/black"-->
                        <!--                            android:hint="@string/location"-->
                        <!--                            android:padding="15dp" />-->


                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100dp"

                        android:layout_marginRight="30dp"


                        android:layout_weight="1"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/color_for_login_fields"
                        app:strokeWidth="2dp">

                        <!-- Rectangle 1 -->
                        <EditText
                            android:id="@+id/add_event_EDT_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:hint="@string/category"
                            android:padding="15dp"

                            android:textColorHint="@color/black" />


                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"

                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="100dp"
                        android:layout_weight="1"
                        android:elevation="40dp"

                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/color_for_login_fields"
                        app:strokeWidth="2dp">

                        <!-- Rectangle 1 -->
                        <EditText
                            android:id="@+id/add_event_EDT_area"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:hint="@string/area"
                            android:padding="15dp"

                            android:textColorHint="@color/black" />


                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="30dp"

                        android:layout_weight="1"


                        android:padding="20dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/color_for_login_fields"
                        app:strokeWidth="2dp">
                        <!-- Rectangle 1 -->
                        <EditText
                            android:id="@+id/add_event_EDT_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:hint="@string/title"
                            android:padding="15dp"
                            android:textColorHint="@color/black" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <!-- תוכן הדיווח:!! -->
                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="34dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="right"
                        android:text="@string/content_event"
                        android:textColor="@color/black"

                        android:textSize="30sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:elevation="40dp"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/color_for_login_fields"
                        app:strokeWidth="2dp">

                        <EditText
                            android:id="@+id/add_event_EDT_details"
                            android:layout_width="match_parent"
                            android:layout_height="136dp"
                            android:background="@color/white"

                            android:maxLines="10"
                            android:padding="20dp"


                            />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!-- העלאת סרטונים\ תמונות: -->
                    <TextView
                        android:id="@+id/upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="right"
                        android:text="@string/upload_media"
                        android:textColor="@color/black"

                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/add_event_LRT_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/upload"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="30dp"


                        >


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:backgroundTint="@color/color_for_login_fields"

                            android:src="@drawable/ic_upload" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/upload_media"
                            android:textColor="@color/black"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!--       <ImageView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:src="@drawable/ic_video"/>
-->

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_event_BTN_save"
                    style="@style/MyButton"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:padding="10dp"
                    android:shadowRadius="2"
                    android:text="@string/save"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:strokeColor="@color/color_for_login_fields"
                    app:strokeWidth="2dp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>