    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-538dp"
        tools:layout_editor_absoluteY="-16dp">


        <!-- Card Shipment -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_page_all_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/deatails_backround"
                    android:orientation="vertical">

                    <!-- סא”ל משה שדה -->
                    <TextView
                        android:id="@+id/profile_page_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:gravity="top"
                        android:text="@string/name"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/profile_page_role"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_people"
                        android:drawablePadding="5dp"
                        android:maxLines="1"
                        android:text="@string/role"

                        />

                    <TextView
                        android:id="@+id/profile_page_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_phone"
                        android:drawablePadding="5dp"
                        android:maxLines="1"
                        android:text="@string/phone_number"

                        />

                    <TextView
                        android:id="@+id/profile_page_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_email"
                        android:drawablePadding="5dp"
                        android:maxLines="1"
                        android:text="@string/mail_address"

                        />

                    <TextView
                        android:id="@+id/profile_page_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_location"
                        android:drawablePadding="5dp"
                        android:maxLines="1"
                        android:text="@string/location"

                        />


                </LinearLayout>


                <FrameLayout
                    android:id="@+id/profile_FRM_nav"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/signup_FAB_profile_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"


                        android:backgroundTint="@color/black"
                        app:borderWidth="0dp"
                        app:elevation="8dp"
                        app:fabCustomSize="40dp"
                        app:srcCompat="@drawable/ic_add"
                        app:tint="@color/white"

                        app:useCompatPadding="false" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/signup_IMG_user"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user"
                        app:civ_border_color="#B2000000"
                        app:civ_border_width="3dp" />
                </FrameLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

